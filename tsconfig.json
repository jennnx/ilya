{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@ui/*": ["src/ui/*"],
      "@features/*": ["src/features/*"],
      "@lib/*": ["src/lib/*"],
      "@/*": ["src/*"]
    },
    "types": ["astro/client"]
  }
}
